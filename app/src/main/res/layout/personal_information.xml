<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/tollbar"
        android:visibility="gone"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_editOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textSize="@dimen/twenty_size"
                android:layout_gravity="right"
                android:layout_margin="@dimen/twenty">

            </TextView>

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="@dimen/hundred_twenty"
                android:layout_height="@dimen/hundred_twenty"
                android:src="@drawable/profileimage"
                android:layout_gravity="center_horizontal" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fullname"
                app:hintTextColor="#94979A"
                app:boxStrokeColor="#94979A"
                android:layout_margin="@dimen/fifteen">

                <EditText
                    android:id="@+id/edit_fillname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fifty"
                    android:padding="@dimen/ten"
                    android:textSize="@dimen/edittextsize"
                    android:textColor="#4C92D8"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ContactNo"
                app:hintTextColor="#94979A"
                app:boxStrokeColor="#94979A"
                android:layout_margin="@dimen/fifteen">

                <EditText
                    android:id="@+id/edit_mobileNo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fifty"
                    android:padding="@dimen/ten"
                    android:textSize="@dimen/edittextsize"
                    android:textColor="#4C92D8"
                    android:inputType="phone"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="EmailId"
                app:hintTextColor="#94979A"
                app:boxStrokeColor="#94979A"
                android:layout_margin="@dimen/fifteen">

                <EditText
                    android:id="@+id/edit_EmailId"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fifty"
                    android:padding="@dimen/ten"
                    android:textSize="@dimen/edittextsize"
                    android:textColor="#4C92D8"
                    android:inputType="textEmailAddress"/>

            </com.google.android.material.textfield.TextInputLayout>

           <!-- <com.google.android.material.textfield.TextInputLayout
