<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rel_Click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selectaddressback"
        android:layout_margin="@dimen/fifteen"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/ten">

            <TextView
                android:id="@+id/orderId"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten"
                android:textColor="@color/black"
                android:text="OrderId"
                android:textSize="@dimen/textsize"></TextView>

            <TextView
                android:id="@+id/text_orderDate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten"
                android:textColor="@color/black"
                android:text="OrderDate"
                android:textSize="@dimen/textsize"></TextView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/textvalue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/ten">

            <TextView
                android:id="@+id/text_orderId"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten"
                android:textColor="@color/black"
                android:text="OrderId"
                android:textSize="@dimen/textsize"></TextView>


            <TextView
                android:id="@+id/text_OrderDate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten"
                android:textColor="@color/black"
                android:text="OrderDate"
                android:textSize="@dimen/textsize"></TextView>


        </LinearLayout>

        <Button
            android:id="@+id/btn_ViewOrderDetails"
            android:layout_width="@dimen/two_hundred"
            android:layout_height="@dimen/fifty"
            app:backgroundTint="#DA291C"
            android:text="View Order Details"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_below="@id/textvalue"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginBottom="@dimen/ten"></Button>

    </RelativeLayout>

</RelativeLayout>