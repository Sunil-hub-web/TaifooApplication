<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProductDescription">

    <RelativeLayout
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"
        android:background="@drawable/homecard_back"
        android:elevation="@dimen/fifteen">

        <ImageView
            android:id="@+id/image_Arrow"
            android:layout_width="@dimen/twenty_five"
            android:layout_height="@dimen/twenty_five"
            android:src="@drawable/left_arrow"
            android:layout_margin="@dimen/ten"></ImageView>

        <TextView
            android:id="@+id/product_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_Arrow"
            android:layout_margin="@dimen/ten"
            android:text="Chicken Leg"
            android:textSize="@dimen/twenty"
            android:textColor="#22647E">

        </TextView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_marginTop="@dimen/ten"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/two_hundred"
            android:src="@drawable/chikencutpice"
            android:scaleType="centerInside"></ImageView>

        <TextView
            android:id="@+id/productname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten"
            android:text="Chicken Leg"
            android:textSize="@dimen/twenty_five"
            android:textColor="#22647E"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten"
            android:text="hbjsbbmkjjbdsbkbmk,mzbiuulkikkbnk,mn,mdkibukjbkbkmbkjbiubgdsk"
            android:textSize="@dimen/edittextsize"
            android:textColor="#787B7C"></TextView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginTop="@dimen/five">

                <TextView
                    android:id="@+id/totalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#D81405"
                    android:textSize="@dimen/twenty"
                    android:text="500.00"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/thirty"></TextView>

                <TextView
                    android:id="@+id/priceSymbol5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs."
                    android:textColor="#D81405"
                    android:textSize="@dimen/twenty"
                    android:textStyle="bold"></TextView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginTop="@dimen/five"
                android:layout_toRightOf="@id/price">

                <TextView
                    android:id="@+id/totalPrice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#A6A2A2"
                    android:textSize="@dimen/edittextsize"
                    android:text="500.00"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/thirty"></TextView>

                <TextView
                    android:id="@+id/priceSymbol1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs."
                    android:textColor="#A6A2A2"
                    android:textSize="@dimen/edittextsize"
                    android:textStyle="bold"></TextView>

            </RelativeLayout>

        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/showProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/productprice"
            android:layout_marginTop="@dimen/twenty"
            android:layout_marginBottom="@dimen/fifteen">

            <TextView
                android:id="@+id/textUnit"
                android:layout_width="@dimen/hundred"
                android:layout_height="@dimen/forty"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/fifteen"
                android:background="@drawable/box"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                android:gravity="center"
                android:paddingLeft="@dimen/ten"
                android:text="Select"
                android:textSize="@dimen/edittextsize"
                android:textStyle="bold"
                android:textColor="#1D4759"></TextView>

            <LinearLayout
                android:id="@+id/inc"
                android:layout_width="@dimen/hundred"
                android:layout_height="@dimen/thirty_five"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/ten"
                android:weightSum="3">

                <TextView
                    android:id="@+id/t3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/addback"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="#DF2424"
                    android:textSize="@dimen/edittextsize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/edittextsize" />

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/addback"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="#DF2424"
                    android:textSize="@dimen/edittextsize"
                    android:textStyle="bold" />

            </LinearLayout>


        </RelativeLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_addToCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/thirteen"
            android:layout_below="@id/productprice"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginTop="@dimen/thirty"
            android:layout_marginRight="@dimen/twenty"
            android:layout_marginBottom="@dimen/five"
            android:text="Add To Cart"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize"
            android:textStyle="bold"
            app:backgroundTint="#1D4759"
            android:visibility="visible">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/thirteen"
            android:text="Buy Now"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginTop="@dimen/three"
            android:layout_marginRight="@dimen/twenty"
            app:backgroundTint="#DA291C"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15dp"></com.google.android.material.button.MaterialButton>


    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        app:itemIconTint="#96989A"
        app:itemTextColor="#96989A"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_navigation"
        android:elevation="@dimen/twenty">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>