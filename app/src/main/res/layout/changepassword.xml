<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/twenty">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Old Password"
            app:hintTextColor="#94979A"
            app:boxStrokeColor="#94979A"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten">

            <EditText
                android:id="@+id/edit_OldPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:textSize="@dimen/edittextsize"
                android:textColor="#4C92D8"
                android:inputType="text"
                android:padding="@dimen/ten"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Password"
            app:hintTextColor="#94979A"
            app:boxStrokeColor="#94979A"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten">

            <EditText
                android:id="@+id/edit_NewPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:textSize="@dimen/edittextsize"
                android:textColor="#4C92D8"
                android:inputType="text"
                android:padding="@dimen/ten"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            app:hintTextColor="#94979A"
            app:boxStrokeColor="#94979A"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten">

            <EditText
                android:id="@+id/edit_ConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:textSize="@dimen/edittextsize"
                android:textColor="#4C92D8"
                android:inputType="text"
                android:padding="@dimen/ten"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:layout_marginTop="@dimen/twenty"
            android:layout_marginBottom="@dimen/twenty"
            android:padding="10dp"
            android:text="Change Password"
            app:backgroundTint="#DA291C"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_alignParentBottom="true"></com.google.android.material.button.MaterialButton>


    </LinearLayout>



</RelativeLayout>