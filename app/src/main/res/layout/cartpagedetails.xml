<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hundred"
        android:layout_marginStart="@dimen/ten"
        android:layout_marginLeft="@dimen/ten"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginEnd="@dimen/ten"
        android:layout_marginRight="@dimen/ten"
        android:layout_marginBottom="@dimen/ten"
        android:background="@drawable/homecard_back1"
        android:elevation="@dimen/ten">

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="@dimen/eighty"
            android:layout_height="@dimen/eighty"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/save"></ImageView>

        <TextView
            android:id="@+id/product_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginTop="@dimen/ten"
            android:layout_toRightOf="@id/productImage"
            android:text="BBRoyal"
            android:textColor="@color/black"
            android:textSize="@dimen/edittextsize"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/unit_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_Name"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginTop="@dimen/five"
            android:layout_toRightOf="@id/productImage"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/textsize"
            android:textStyle="bold"></TextView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/unit_Name"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginTop="@dimen/five"
            android:layout_toRightOf="@id/productImage">

            <TextView
                android:id="@+id/totalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twenty_five"
                android:text="500.00"
                android:textColor="#D81405"
                android:textSize="@dimen/edittextsize"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/priceSymbol5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs."
                android:textColor="#D81405"
                android:textSize="@dimen/edittextsize"
                android:textStyle="bold"></TextView>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/img_Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/homecard_back1"
            android:elevation="@dimen/fifteen"
            android:orientation="vertical">

            <ImageView

                android:layout_width="@dimen/twelve"
                android:layout_height="@dimen/twelve"
                android:layout_marginStart="@dimen/eight"
                android:layout_marginLeft="@dimen/eight"
                android:layout_marginTop="@dimen/eight"
                android:layout_marginEnd="@dimen/eight"
                android:layout_marginRight="@dimen/eight"
                android:layout_marginBottom="@dimen/eight"
                android:src="@drawable/wrong"></ImageView>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/inc"
            android:layout_width="@dimen/eighty"
            android:layout_height="@dimen/twenty_five"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/twenty"
            android:layout_marginBottom="@dimen/twenty"
            android:weightSum="3">

            <TextView
                android:id="@+id/t3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/textback"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="@dimen/edittextsize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/t2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/t1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/textback"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>