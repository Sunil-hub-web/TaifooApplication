<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/selectCity">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Select You City"
                        android:textColorHint="@color/teal_700"
                        android:layout_margin="@dimen/five">

                        <AutoCompleteTextView
                            android:id="@+id/tv_SelectCity"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:imeOptions="actionNext"
                            android:inputType="textAutoComplete"
                            android:padding="10dp"
                            android:textColor="@color/teal_700"
                            android:textSize="@dimen/textsize" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/nav_dropdown"
                        app:tint="@color/black" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/two_hundred"
                    android:id="@+id/viewpager"
                    android:layout_below="@+id/selectCity">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/sliderViewPager2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </androidx.viewpager2.widget.ViewPager2>

                    <LinearLayout
                        android:id="@+id/dots_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="horizontal"></LinearLayout>


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/viewpager"
                    android:layout_marginTop="@dimen/twenty"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="@dimen/forty_five"
                            android:layout_height="@dimen/forty_five"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/webcapture">

                        </ImageView>

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/image"
                            android:layout_centerHorizontal="true"
                            android:text="Farm Fresh"
                            android:textColor="#5B5B5C"
                            android:textSize="@dimen/twelve_size"
                            android:textStyle="bold"></TextView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/image1"
                            android:layout_width="@dimen/forty_five"
                            android:layout_height="@dimen/forty_five"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/webcapture1">

                        </ImageView>

                        <TextView
                            android:id="@+id/name1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/image1"
                            android:layout_centerHorizontal="true"
                            android:text="Halaal cut"
                            android:textColor="#5B5B5C"
                            android:textSize="@dimen/twelve_size"
                            android:textStyle="bold"></TextView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/image3"
                            android:layout_width="@dimen/forty_five"
                            android:layout_height="@dimen/forty_five"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/webcaptur2">

                        </ImageView>

                        <TextView
                            android:id="@+id/name3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/image3"
                            android:layout_centerHorizontal="true"
                            android:text="Fast Delivery"
                            android:textColor="#5B5B5C"
                            android:textSize="@dimen/twelve_size"
                            android:textStyle="bold"></TextView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/image4"
                            android:layout_width="@dimen/forty_five"
                            android:layout_height="@dimen/forty_five"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/webcapture3">

                        </ImageView>

                        <TextView
                            android:id="@+id/name4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/image4"
                            android:layout_centerHorizontal="true"
                            android:text="Healthy &amp; Hygienic"
                            android:textColor="#5B5B5C"
                            android:textSize="@dimen/ten_size"
                            android:textStyle="bold"></TextView>

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_below="@+id/details"
                    android:layout_marginTop="@dimen/fifteen"
                    android:background="#FFFFFF" />

                <TextView
                    android:id="@+id/shopByCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:textColor="#22647E"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:textSize="@dimen/edittextsize"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/ten"></TextView>

                <RelativeLayout
                    android:id="@+id/item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/shopByCategory"
                    android:layout_marginTop="@dimen/fifteen">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/showitemRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.recyclerview.widget.RecyclerView>

                </RelativeLayout>

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_below="@+id/item"
                    android:layout_marginTop="@dimen/fifteen"
                    android:background="#FFFFFF" />

                <RelativeLayout
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hundred"
                    android:layout_below="@id/view1"
                    android:layout_marginTop="@dimen/twenty"
                    android:background="@drawable/banner2">

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/ten"
                        android:text="You Can Call AnyTime To"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/edittextsize"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/ten"
                        android:text="Get Your Product"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/edittextsize"
                        android:textStyle="bold"></TextView>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/ten"
                        android:text="CALL +91-1800 888 545"
                        android:textColor="@color/white"
                        android:textSize="@dimen/ten_size"
                        android:textStyle="bold"
                        app:backgroundTint="#DA291C"></com.google.android.material.button.MaterialButton>


                </RelativeLayout>

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_below="@+id/banner"
                    android:layout_marginTop="@dimen/ten"
                    android:background="#FFFFFF" />

                <TextView
                    android:id="@+id/bestSelling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view2"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:layout_marginTop="@dimen/fifteen"
                    android:text="Best Selling"
                    android:textColor="#22647E"
                    android:textSize="@dimen/edittextsize"
                    android:textStyle="bold"></TextView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bestSelling"
                    android:layout_marginTop="@dimen/fifteen">

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/bestsellingRecycler">

                    </androidx.recyclerview.widget.RecyclerView>

                </RelativeLayout>


            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>