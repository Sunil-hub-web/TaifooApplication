<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/five"
        android:layout_weight="1"
        android:gravity="center"
        app:cardCornerRadius="@dimen/ten"
        app:cardElevation="@dimen/fifty">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hundred_fifty"
                android:scaleType="fitXY"
                android:src="@drawable/chikencutpice"></ImageView>

            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/productImage"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginTop="@dimen/five"
                android:layout_marginRight="@dimen/fifty"
                android:layout_weight="1"
                android:text="Chicken Legs"
                android:textColor="#1D4759"
                android:textSize="@dimen/twelve_size"
                android:textStyle="bold"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/productName"
                android:id="@+id/lin1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/rel_QTY"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/five"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="QTY."
                        android:textSize="@dimen/ten"
                        android:textColor="#03A9F4"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/text_QTY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/five"
                        android:layout_toRightOf="@+id/qty"
                        android:layout_weight="1"
                        android:text="250"
                        android:textColor="#03A9F4"
                        android:textSize="@dimen/ten"
                        android:textStyle="bold"></TextView>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/five"
                    android:layout_marginRight="@dimen/ten"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/rel_NetWt">

                        <TextView
                            android:id="@+id/NetWt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="NetWt."
                            android:textSize="@dimen/ten"
                            android:textColor="#03A9F4"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:id="@+id/text_NetWt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/five"
                            android:layout_toRightOf="@+id/NetWt"
                            android:layout_weight="1"
                            android:text="250"
                            android:textColor="#03A9F4"
                            android:textSize="@dimen/ten"
                            android:textStyle="bold"></TextView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/rel_GrossWt">

                        <TextView
                            android:id="@+id/GrossWt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/five"
                            android:layout_toLeftOf="@id/text_GrossWt"
                            android:layout_weight="1"
                            android:text="GrossWt."
                            android:textColor="#F44336"
                            android:textSize="@dimen/ten"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:id="@+id/text_GrossWt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="@dimen/five"
                            android:layout_marginRight="@dimen/five"
                            android:layout_weight="1"
                            android:text="250"
                            android:textColor="#F44336"
                            android:textSize="@dimen/ten"
                            android:textStyle="bold"></TextView>

                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>



            <RelativeLayout
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lin1"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginRight="@dimen/ten"
                android:layout_marginBottom="@dimen/five"
                android:layout_marginTop="@dimen/five">

                <TextView
                    android:id="@+id/rs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rs."
                    android:textSize="@dimen/twelve_size"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/text_salesPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/five"
                    android:layout_toRightOf="@+id/rs"
                    android:layout_weight="1"
                    android:text="LOGIN"
                    android:textSize="@dimen/twelve_size"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/rs1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/five"
                    android:layout_weight="1"
                    android:text="/"
                    android:layout_toRightOf="@+id/text_salesPrice"
                    android:textSize="@dimen/twelve_size"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/text_Regularprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/five"
                    android:layout_marginRight="@dimen/five"
                    android:layout_weight="1"
                    android:layout_toRightOf="@+id/rs1"
                    android:text="LOGIN"
                    android:textColor="#DD1D0F"
                    android:textSize="@dimen/twelve_size"
                    android:textStyle="bold"></TextView>


            </RelativeLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_addToCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/price"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginTop="@dimen/three"
                android:layout_marginRight="@dimen/ten"
                android:layout_marginBottom="@dimen/five"
                android:text="Add To Cart"
                android:textColor="@color/white"
                android:textSize="@dimen/twelve_size"
                android:textStyle="bold"
                android:visibility="visible"
                app:backgroundTint="#1D4759"></com.google.android.material.button.MaterialButton>

            <RelativeLayout
                android:id="@+id/showProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/price"
                android:layout_marginTop="@dimen/five"
                android:layout_marginBottom="@dimen/seven"
                android:visibility="gone">

                <!--<TextView
                    android:id="@+id/text_Unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/fifteen"
                    android:background="@drawable/box"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    android:gravity="center"
                    android:paddingLeft="@dimen/ten"
                    android:text="Select"
                    android:textColor="#1D4759"
                    android:textSize="@dimen/twelve_size"
                    android:textStyle="bold"></TextView>-->

                <LinearLayout
                    android:id="@+id/inc"
                    android:layout_width="@dimen/seventy"
                    android:layout_height="@dimen/thirty"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/ten"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/t3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/addback"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="#DF2424"
                        android:textSize="@dimen/textsize"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/t2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize" />

                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/addback"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="#DF2424"
                        android:textSize="@dimen/textsize"
                        android:textStyle="bold" />

                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>