<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/thirty"
        android:layout_marginRight="@dimen/twenty"
        android:layout_marginTop="@dimen/forty">

        <TextView
            android:id="@+id/nav_AboutAs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About As"
            android:textSize="@dimen/edittextsize"
            android:textColor="@color/black">

        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/text1"
            android:layout_marginTop="@dimen/ten"
            android:background="#787777" />

        <TextView
            android:id="@+id/nav_TermsAndConditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terms And Conditions"
            android:textSize="@dimen/edittextsize"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/twenty">

        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/text1"
            android:layout_marginTop="@dimen/ten"
            android:background="#787777" />


        <TextView
            android:id="@+id/nav_PrivacyPolicyr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacy Policyr"
            android:textSize="@dimen/edittextsize"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/twenty">

        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/text1"
            android:layout_marginTop="@dimen/ten"
            android:background="#787777" />

    </LinearLayout>

</RelativeLayout>