<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten"
                android:layout_weight="1"
                android:gravity="center"
                app:cardCornerRadius="@dimen/ten"
                app:cardElevation="@dimen/fifty">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/productImage"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/hundred_fifty"
                        android:src="@drawable/save"
                        android:scaleType="fitXY"></ImageView>

                    <TextView
                        android:id="@+id/productName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="@dimen/fifty"
                        android:layout_weight="1"
                        android:text="Chicken Legs"
                        android:layout_marginLeft="@dimen/fifteen"
                        android:layout_below="@id/productImage"
                        android:textSize="@dimen/textsize"
                        android:textStyle="bold"
                        android:textColor="#1D4759"></TextView>

                    <TextView
                        android:id="@+id/productprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="@dimen/fifty"
                        android:layout_weight="1"
                        android:text="LOGIN"
                        android:layout_marginLeft="@dimen/fifteen"
                        android:layout_below="@id/productName"
                        android:textSize="@dimen/textsize"
                        android:textStyle="bold"></TextView>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ten"
                        android:layout_marginRight="@dimen/ten"
                        android:layout_marginTop="@dimen/fifteen"
                        android:layout_marginBottom="@dimen/fifteen"
                        android:text="Signup"
                        android:layout_below="@id/productprice"
                        app:backgroundTint="#1D4759"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="@dimen/textsize"></com.google.android.material.button.MaterialButton>

                    <RelativeLayout
                        android:id="@+id/showProduct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/productprice"
                        android:layout_marginTop="@dimen/fifteen"
                        android:layout_marginBottom="@dimen/fifteen"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/text_Shapping"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/box"
                            android:text="Select"
                            android:gravity="center"
                            android:paddingLeft="@dimen/ten"
                            android:layout_marginLeft="@dimen/fifteen"
                            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                            android:textSize="@dimen/textsize"
                            android:textStyle="bold"></TextView>

                        <LinearLayout
                            android:id="@+id/inc"
                            android:layout_width="@dimen/eighty"
                            android:layout_height="@dimen/twenty_five"
                            android:weightSum="3"
                            android:layout_marginRight="@dimen/twenty"
                            android:layout_alignParentRight="true">

                            <TextView
                                android:id="@+id/t3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="-"
                                android:background="@drawable/textback"
                                android:textColor="@color/white"
                                android:textSize="@dimen/edittextsize"
                                android:textStyle="bold"
                                />

                            <TextView
                                android:id="@+id/t2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="@color/black"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/t1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="+"
                                android:background="@drawable/textback"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"/>

                        </LinearLayout>


                    </RelativeLayout>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>
</RelativeLayout>